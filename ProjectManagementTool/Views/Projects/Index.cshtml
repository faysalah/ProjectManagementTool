@model IEnumerable<ProjectManagementTool.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<p>
    @Html.ActionLink("Add New Project", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
    @Html.ActionLink("Assign Resourece", "Create", "AssignResources", null,htmlAttributes: new { @class="btn btn-primary" })
</p>
<h4>Project List</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayName("No of Members")
        </th>
        <th>
            @Html.DisplayName("No of Tasks")
        </th>
        <th>
            @Html.DisplayName("Project")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayName("10")
        </td>
        <td>
            @Html.DisplayName("25")
        </td>
        
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
