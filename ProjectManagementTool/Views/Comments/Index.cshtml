@model IEnumerable<ProjectManagementTool.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<p>
    @Html.ActionLink("Create New", "Create",null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<h4>Comment List</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Comment")
        </th>
        <th>
            @Html.DisplayName("By")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comment1)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.commenterUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
